		{
			"name": "Configure new Role",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							""
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"auth": {
					"type": "bearer",
					"bearer": [
						{
							"key": "token",
							"value": "{{root_token}}",
							"type": "string"
						}
					]
				},
				"method": "POST",
				"header": [],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"bound_audiences\": [\n            \"login\"\n        ],\n        \"claim_mappings\": {\n            \"email\": \"email\",\n            \"name\": \"name\",\n            \"sub\": \"token_id\",\n            \"upn\": \"unique_name\"\n        },\n        \"role_type\": \"jwt\",\n        \"token_no_default_policy\": true,\n        \"token_policies\": [\n            \"solana\"\n        ],\n        \"user_claim\": \"sub\"\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
